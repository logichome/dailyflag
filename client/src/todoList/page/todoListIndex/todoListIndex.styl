@import '~@/style/varivles'
$todoItemHeight = 116px
page, html
  background-color $greyPageColor
.menu
  position fixed
  z-index 2
  top 0
  left 0
  width 100%
  background-color #fff
  box-sizing border-box
  padding 20px 40px
  box-shadow:  6px 0px 10px rgba(89, 89, 89, .15);
  display flex
  align-items center
  justify-content space-between
  .filter-list
    display flex
    align-items center
    button
      border-radius 0
      &:first-of-type
        border-radius 10px 0 0 10px
      &:last-of-type
        border-radius 0 10px 10px 0
.todo-list
  padding 100px 0px 60px
  .no-data
    text-align center
    padding 40px
    color $weekFontColor
    font-size 26px
  .group-item
    .group-date
      padding 20px 20px
      color $weekFontColor
      font-size: 26px
    .group-list
      border-top $normalBorder
      overflow hidden
  .todo-item
    background-color #fff
    display flex
    position relative
    width 100vw
    height $todoItemHeight
    &.movable-active
      .todo-item-container
        transform: translateX(0)
      .todo-item-right
        transform: translateX(0)
    .movable-view
      height $todoItemHeight
      width 100vw
      display flex
      align-items center
    .todo-item-container
      position relative
      display flex
      align-items center
      width 100%
      transition transform $transitionTime
      transform: translateX(300px)
      margin-left: -300px
      .item-tag
        width 60px
        height 60px
        border-radius: 50%
        border 2px solid $mainColor
        color $mainColor
        text-align center
        font-size 22px
        line-height 60px
        margin-left 20px
      &::after
        content ''
        position absolute
        z-index 2
        bottom 0px
        left 100px
        height 2px
        width 650px
        background-color $borderColor
    &:last-of-type
      .todo-item-container
        &::after
          display none
    .todo-item-right
      height $todoItemHeight
      width 300px
      transform: translateX(300px)
      transition transform $transitionTime
      .right-btns
        display flex
        align-items center
        .btn-item
          transition width $transitionTime
          overflow hidden
          width 100px
          font-size 28px
          height $todoItemHeight + 2px
          margin-top: -2px
          line-height $todoItemHeight
          text-align center
          color #fff
          background-color $linkColor
          display flex
          align-items center
          justify-content center
          white-space nowrap
          &.error
            background-color $errorColor
          &.default
            background-color $warnColor
    .todo-item-title.finished
      // text-decoration line-through
      color $weekFontColor
    .item-main
      font-size 32px
      color $fontColor
      line-height 76px
      padding 20px
      display flex
      flex 1
      font-weight 500
      align-items center
      justify-content space-between
      .finish-status
        color $weekFontColor
        font-size 26px
    .item-detail
      .item-info
        padding 20px 20px 10px
        .info-item
          display flex
          align-items center
          justify-content space-between
          font-size 26px
          line-height 48px
          color $weekFontColor
      // &::before
      //   content ''
      //   display block
      //   width 0
      //   // background-color #ddd
      //   border-bottom $normalBorder
      //   transition width $transitionTime
      //   box-sizing border-box
      //   margin 0 auto
      // border-top 1px solid transparent
      max-height 0
      overflow hidden
      transition all $transitionTime
      .btns
        padding 20px 20px
        display flex
        align-items center
        justify-content space-between
        .left
          display flex
          align-items center
        .right
          font-size 28rpx
          color $weekFontColor
      button
        margin-right 20px
      &.show
        // border-top 1px solid #ddd
        max-height 300px
        &::before
          width 650px
