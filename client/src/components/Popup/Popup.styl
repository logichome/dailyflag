.container
  position fixed
  z-index 2020
  .mask
    background-color #000
    opacity 0
    position fixed
    width 100%
    height 100%
    top 0
    left 0
    right 0
    bottom 0
    transition all 0.3s
    &.show
      opacity 0.5
  .pop-box
    position fixed
    background-color #fff
    transition all 0.3s
    padding 40px
    &.center
      top 50%
      left 50%
      transform translate(-50%, -30%)
      opacity 0
      border-radius 10px
      &.show
        transform translate(-50%, -50%)
        opacity 1
    &.bottom
      width 100%
      box-sizing border-box
      bottom 0
      left 50%
      transform translate(-50%, 100%)
      opacity 0
      border-radius: 10px 10px 0 0
      &.show
        transform translate(-50%, 0)
        opacity 1