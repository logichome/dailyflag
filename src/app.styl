button
  padding 0
  margin 0
  background-color inherit
  font-size inherit
  &::after
    border none;
  &.button-hover
    background-color #ccc !important
    color #fff !important
  &[type=primary]
    background-color #888
    color #fff
  &[type=default]
    background-color #eee
    color #333
  &[type=warn]
    background-color #f08b9c
    color #fff
  &.small
    width 100px
    height 60px
    line-height 60px
    text-align center
    font-size 24px
  &.middle
    width 640px
    height 90px
    line-height 90px
    text-align center
    font-size 36px
    margin 0 auto
  &.popup
    width 480px
    height 80px
    line-height 80px
    text-align center
    font-size 30px
    margin 0 auto
